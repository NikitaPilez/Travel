<?xml version="1.0"?>
<ruleset xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" name="Travel" xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/squizlabs/PHP_CodeSniffer/master/phpcs.xsd">

    <description>A PHP_CodeSniffer ruleset for the project</description>

    <!-- Exclude third-party packages from being checked. -->
    <exclude-pattern>/vendor/*</exclude-pattern>

    <!-- Run against a PSR12 ruleset -->
    <rule ref="PSR12"/>

    <rule ref="Squiz.Arrays.ArrayDeclaration.NoCommaAfterLast"/>
</ruleset>